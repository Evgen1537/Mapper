<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evgenltd.mapper.ui.screen.EventLogBrowser">
   <children>
      <VBox spacing="4.0" HBox.hgrow="NEVER">
         <children>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" prefHeight="24.0" prefWidth="24.0" styleClass="inline-button">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/cross.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
      <ListView fx:id="eventList" HBox.hgrow="ALWAYS" />
   </children>
</HBox>
